{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "testing": {
      "name": "Testing Agent",
      "model": "anthropic/claude-3-5-sonnet-20241022",
      "description": "Agent for writing tests and test-related tasks"
    }
  },
  "plugin": [
    "opencode-openai-codex-auth",
    "./plugins/save-history.ts",
    "file:///Users/nicholas.deveaux/.config/opencode/plugins/peon-ping.ts"
  ],
  "keybinds": {
    "messages_line_up": "ctrl+alt+y,ctrl+x k",
    "messages_line_down": "ctrl+alt+e,ctrl+x j",
    "messages_last": "ctrl+alt+g,end,ctrl+x g"
  },
  "command": {
    "shortcuts": {
      "template": "Custom navigation shortcuts:\n- Ctrl+X then K: scroll up one line\n- Ctrl+X then J: scroll down one line\n- Ctrl+X then G: jump to bottom (resume autoscroll)\n\nDefaults still work:\n- Ctrl+Alt+Y / Ctrl+Alt+E: line up/down\n- Ctrl+Alt+G or End: bottom",
      "description": "Show custom navigation keybinds"
    }
  },
